{
    "name": "acquia/lightning-project",
    "description": "Project template for Drupal 8 sites built with the Lightning distribution.",
    "type": "project",
    "license": "GPL-2.0+",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "drupal/drupal-extension": "~3.4.0",
        "behat/mink": "~1.7",
        "behat/mink-goutte-driver": "~1.2",
        "jcalderonzumba/gastonjs": "~1.0.2",
        "drupal/coder": "8.*",
        "phpunit/phpunit": "~4.8",
        "symfony/css-selector": "~2.8",
        "behat/behat": "^3.0",
        "se/selenium-server-standalone": "^2.53",
        "composer/composer": "^1.3"
    },
    "require": {
        "drupal-composer/drupal-scaffold": "^2.0.0",
        "cweagans/composer-patches": "^1.6.0",
        "acquia/lightning": "^4.0",
        "drupal/core": "8.*",
        "drupal/neato": "~1.6",
        "drupal/module_filter": "^3.1",
        "drupal/group": "^1.0",
        "drupal/admin_toolbar": "^1.21",
        "drupal/address": "^1.3",
        "drupal/better_exposed_filters": "^3.0",
        "drupal/colorbutton": "^1.1",
        "drupal/ckeditor_font": "^1.0",
        "drupal/ckeditor_smiley": "^1.0",
        "drupal/devel": "^2.0",
        "drupal/exif": "^1.0",
        "drupal/field_group": "^1.0",
        "drupal/fontawesome": "^2.0",
        "drupal/libraries": "^3.0",
        "drupal/masquerade": "2.x-dev",
        "drupal/paragraphs": "^1.2",
        "drupal/social_media": "^1.2",
        "phayes/geophp": "^1.2",
        "drupal/special_menu_items": "1.x-dev",
        "drupal/examples": "1.x-dev",
        "drupal/calendar": "1.x-dev",
        "drupal/console": "^1.8",
        "drupal/captcha": "1.x-dev",
        "drupal/autosave_form": "1.x-dev",
        "drupal/linkit": "^4.3",
        "tijsverkoyen/css-to-inline-styles": "^2.2",
        "drush/drush": "^9.0",
        "drupal/mailsystem": "^4.1",
        "drupal/swiftmailer": "^1.0@beta",
        "drupal/mailchimp": "^1.7",
        "drupal/views_bulk_operations": "^2.4",
        "drupal/login_destination": "1.x-dev",
        "drupal/color_field": "^2.0",
        "drupal/geofield": "^1.0@beta",
        "drupal/geofield_map": "^2.15",
        "drupal/honeypot": "^1.29",
        "drupal/google_analytics": "^2.3",
        "drupal/shs": "^1.0@alpha",
        "drupal/migrate_plus": "^4.0",
        "drupal/domain": "^1.0@alpha",
        "drupal/domain_theme_switch": "^1.4",
        "drupal/domain_site_settings": "^1.3",
        "drupal/daul": "^1.0",
        "drupal/form_mode_control": "^2.0@RC",
        "drupal/graphql": "^3.0@RC",
        "drupal/graphql_views": "^1.0@beta",
        "drupal/vbo_export": "^2.1",
        "drupal/fontyourface": "^3.2",
        "drupal/lightning_layout": "^2.0",
        "drupal/node_revisions_autoclean": "^1.0@beta",
        "drupal/allowed_formats": "^1.1",
        "drupal/domain_access": "^1.0@alpha",
        "mikey179/vfsstream": "^1.6",
        "phpoffice/phpspreadsheet": "^1.9",
        "drupal/seckit": "^1.2",
        "drupal/devel_entity_updates": "^1.0"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "scripts": {
      "post-install-cmd": [
        "DrupalComposer\\DrupalScaffold\\Plugin::scaffold"
      ],
      "post-update-cmd": [
        "DrupalComposer\\DrupalScaffold\\Plugin::scaffold"
      ]
    },
    "config": {
        "bin-dir": "bin/"
    },
    "extra": {
        "installer-types": [
            "bower-asset",
            "npm-asset"
        ],
        "installer-paths": {
            "docroot/core": [
                "type:drupal-core"
            ],
            "docroot/libraries/{$name}": [
                "type:drupal-library",
                "type:bower-asset",
                "type:npm-asset"
            ],
            "docroot/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "docroot/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "docroot/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/contrib/{$name}": [
                "type:drupal-drush"
            ]
        },
        "enable-patching": true
    }
}
