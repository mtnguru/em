<div id="page-view" role="document" class="page">
  {%  if page.header %}
    <header id="site-header">
      <div>
        {{ page.header }}
      </div>
    </header>
  {% endif %}

  {%  if page.featured %}
    <section id="featured">
      <div class="columns">
        {{ page.featured }}
      </div>
    </section>
  {% endif %}

  {% if page.breadcrumb %}
    <section id="breadcrumb">
      <div class="outer-wrapper">
        {{ page.breadcrumb }}
      </div>
    </section>
  {% endif %}

  <main role="main" class="outer-wrapper">
    <a id="main-content" tabindex="-1"></a>

    {{ page.content }}
  </main>

  {% if page.footer_top or page.footer_bottom %}
    <footer id="site-footer" role="contentinfo">
      {% if page.footer_top %}
        <section class="footer-top">
          {{ page.footer_top }}
        </section>
      {% endif %}

      {% if page.footer_bottom %}
        <section class="footer-bottom">
          {{ page.footer_bottom }}
        </section>
      {% endif %}
    </footer>
  {% endif %}
</div>
